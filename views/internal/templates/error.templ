package templates

templ InternalServerError(location string) {
	<div class="w-100 h-[100vh] flex flex-col items-center justify-center">
		<p class="text-white">Something happened on the server that we couldn't recover from</p>
		<a class="text-white underline" href={ templ.SafeURL(location) }>Click here to go back</a>
	</div>
}
